<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorLightPink</item>
        <item name="colorPrimaryDark">@color/colorLightPink</item>
        <item name="colorAccent">@color/colorLightPink</item>
        <item name="actionOverflowButtonStyle">@color/colorLightPink</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="divider_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="divider_horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="default_floating_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@android:color/white</item>
        <item name="backgroundTint">@color/colorHotPink</item>
        <item name="fabSize">mini</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/background_text_cursor</item>
        <item name="android:textColorHighlight">@color/colorLightPink</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/colorHotPink</item>
    </style>

    <style name="BottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/colorHotPink</item>
        <item name="colorPrimary">@color/colorHotPink</item>
    </style>

</resources>